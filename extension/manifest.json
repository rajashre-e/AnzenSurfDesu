{
  "manifest_version": 3,
  "name": "AnzenSurf",
  "version": "1.0",

  "permissions": [
    "identity",
    "storage"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*"
  ],

  "oauth2": {
    "client_id": "",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
